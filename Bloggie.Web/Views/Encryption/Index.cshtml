@{
    ViewData["Title"] = "Verify Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top:54px">
    <div class="row justify-content-center">
        <div class="col-lg-12">
  
            <div class="card rounded-4 px-3 py-1"
                 style="box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;border:2px dotted #727f8d;">

                <div class="row g-4 align-items-center">
                    <div class="col-md-12 text-center">
                        <h1 class="fw-bold text-primary-emphasis uii"
                            style="font-size: 2.8rem; font-weight: 700;
                   background:#38414a;
                   -webkit-background-clip: text ;
                   -webkit-text-fill-color: transparent;
                   text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);">
                            Password Matching
                        
                        </h1>

                       

                    </div>
                </div>


                <div class="row">
                    <div class="col-md-12">
                <form method="post" asp-action="VerifyPassword">
                    <div class="mb-3">
                                <label class="form-label gvg" style="color:#38414a">Enter Password:</label>
                                <input type="text" name="password" class="form-control fft" required style="border:1px solid #38414a" />
                    </div>
                    <div class="mb-3">
                                <label class="form-label gvg" style="color:#38414a">Enter Password Hash:</label>
                                <input type="text" name="hash" class="form-control fft" required style="border:1px solid #38414a;" />
                    </div>
                            <button type="submit" class="btn w-100 fft" style="background:#727f8d;color:white">Verify</button>
                </form>

             </div>
            </div>

            </div>
        </div>
    </div>
</div>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.16/dist/sweetalert2.all.min.js"></script>

@if (ViewBag.SwalMessage != null)
{
    <script>
        Swal.fire({
            title: "@ViewBag.SwalMessage",
            icon: "@ViewBag.SwalIcon",
            confirmButtonColor: "#0675e1"
        });
    </script>
}
