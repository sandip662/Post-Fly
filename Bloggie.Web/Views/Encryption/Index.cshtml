@{
    ViewData["Title"] = "Verify Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top:84px">
    <div class="row justify-content-center">
        <div class="col-lg-12">
  
            <div class="card rounded-4 px-3 py-1"
                 style="box-shadow: rgba(0, 0, 0, 0.15) 0px 4px 12px;border:2px dotted rgb(207, 106, 27);">

                <div class="row g-4 align-items-center">
                    <div class="col-md-12 text-center">
                        <h1 class="fw-bold text-primary-emphasis"
                            style="font-size: 2.8rem; font-weight: 700;
                   background:rgb(207, 106, 27);;
                   -webkit-background-clip: text ;
                   -webkit-text-fill-color: transparent;
                   text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);">
                            Password Matching
                        
                        </h1>

                       

                    </div>
                </div>


                <div class="row">
                    <div class="col-md-12">
                <form method="post" asp-action="VerifyPassword">
                    <div class="mb-3">
                                <label class="form-label" style="color:rgb(207, 106, 27)">Enter Password:</label>
                                <input type="text" name="password" class="form-control" required style="border:1px solid rgb(207, 106, 27);" />
                    </div>
                    <div class="mb-3">
                                <label class="form-label" style="color:rgb(207, 106, 27)">Enter Password Hash:</label>
                                <input type="text" name="hash" class="form-control" required style="border:1px solid rgb(207, 106, 27);" />
                    </div>
                            <button type="submit" class="btn w-100" style="background:rgb(207, 106, 27);color:white">Verify</button>
                </form>

             </div>
            </div>

            </div>
        </div>
    </div>
</div>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.16/dist/sweetalert2.all.min.js"></script>

@if (ViewBag.SwalMessage != null)
{
    <script>
        Swal.fire({
            title: "@ViewBag.SwalMessage",
            icon: "@ViewBag.SwalIcon",
            confirmButtonColor: "#0675e1"
        });
    </script>
}
