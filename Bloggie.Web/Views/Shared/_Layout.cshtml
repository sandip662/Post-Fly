                <div class="container-fluid">
                    <nav class="navbar navbar-light navbar-expand-lg topnav-menu">

                        <div class="collapse navbar-collapse" id="topnav-menu-content">
                            <ul class="navbar-nav">

                                @*     <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle arrow-none" href="#" id="topnav-dashboard" role="button"
                                   data-bs-toggle="dropdown" aria-haspopup="true">
                                    <i class="fe-airplay me-1"></i> Dashboards 
                                </a>

                            </li> *@
                                <li class="nav-item dropdown me-1">
                                    <a class="nav-link dropdown-toggle arrow-none" href="#" id="topnav-dashboard" role="button"
                                       data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:rgb(207,106,27)">
                                        <i class="fe-airplay me-1" style="color:rgb(207,106,27)"></i> Tag <div class="arrow-down"></div>
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="topnav-admin" style=" box-shadow: rgba(0, 0, 0, 0.02) 0px 1px 3px 0px, rgba(27, 31, 35, 0.15) 0px 0px 0px 1px;">
                                        <a class="dropdown-item" asp-controller="AdminTags" asp-action="Add">Create Tag</a>
                                        <a class="dropdown-item" asp-controller="AdminTags" asp-action="List">Tag List</a>
                                    </ul>
                                </li>

                                <!-- User Dropdown -->
                                <li class="nav-item dropdown me-1">
                                    <a class="nav-link dropdown-toggle arrow-none" href="#" id="topnav-dashboard" role="button"
