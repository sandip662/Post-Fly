@model Bloggie.Web.Models.ViewModels.EditTagRequest
@{
    ViewBag.Title = "Edit Tag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!-- Centered Header Section -->
<div class="container mt-2">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <!-- Card with elegant shadow & subtle color -->
            <div class="card rounded-4 px-3 py-1"
                 style="box-shadow: rgba(0, 0, 0, 0.15) 0px 4px 12px;border:2px dashed #0154a7">

                <div class="row g-4 align-items-center">
                    <div class="col-md-12 text-center">
                        <h1 class="fw-bold text-primary-emphasis"
                            style="font-size: 2.8rem; font-weight: 700;
                   background:#0154a7;
                   -webkit-background-clip: text ;
                   -webkit-text-fill-color: transparent;
                   text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);">

                            <i class="fe-edit me-2"></i>
                            Edit New Tag
                        </h1>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


    <!-- Main Container -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <!-- Increased width for a more spacious layout -->
                <div class="card rounded-4 px-2 py-3"
                 style="box-shadow: rgba(0, 0, 0, 0.15) 0px 4px 12px;border:2px dashed #0154a7">
                    <!-- Border is now darker & visible -->

                <div class="row g-4 align-items-center">
                    <!-- Well-spaced layout -->
                    <!-- Left Section: Form -->

                    <div class="col-md-6 border-end border-3">

                        <h4 class="text-center text-dark mb-3">Admin Functionality</h4>


                        @if (Model != null)
                        {
                            <form method="post">

                                <div class="mb-3">
                                    <label class="form-label fw-semibold" style="color:#0154a7">Id</label>
                                    <input type="text" class="form-control rounded-3 border-primary-subtle shadow-sm px-3 py-2" readonly asp-for="Id" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-semibold" style="color:#0154a7">Name</label>
                                    <input type="text" class="form-control rounded-3 border-primary-subtle shadow-sm px-3 py-2"  asp-for="Name" placeholder="Enter tag name" />
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label fw-semibold" style="color:#0154a7">Display Name</label>
                                    <input type="text" class="form-control rounded-3 border-primary-subtle shadow-sm px-3 py-2" asp-for="DisplayName" placeholder="Enter display name" />
                                    <span class="text-danger" asp-validation-for="DisplayName"></span>
                                </div>
                                <!-- Buttons (With Icons) -->
                                <div class="d-flex justify-content-between">
                                    <button type="submit" class="btn fw-semibold shadow-sm px-4 rounded-3" style="background:#0154a7; color:white">
                                        <i class="bi bi-pencil-square"></i> Update
                                    </button>
                                    <button type="submit" class="btn btn-danger fw-semibold shadow-sm px-4 rounded-3"
                                            asp-area=""
                                            asp-controller="AdminTags"
                                            asp-action="Delete">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </button>
                                </div>

                            </form>
                        }
                        else
                        {
                            <p>Tag not found</p>
                        }



                    </div>

                    <!-- Right Section: Tag Information -->
                    <div class="col-md-6 text-center d-flex flex-column justify-content-center">
                        <div class="d-flex justify-content-center">
                            <div class="d-flex align-items-center justify-content-center rounded-circle shadow-sm"
                                 style="width: 110px; height: 110px; background: #bbdefb; border: 2px solid #64b5f6;">
                                <!-- Added border to the circle -->
                                <i class="bi bi-tags-fill" style="font-size: 3.5rem;color:#0154a7"></i>
                            </div>
                        </div>
                        <h5 class="mt-3 text-dark fw-bold">Organize Your Content</h5>
                        <p class="text-muted" style="font-size: 15px;">Tags help categorize and improve searchability for your blog posts.</p>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
